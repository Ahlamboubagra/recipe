{% extends 'base.html.twig' %}

{% block title %}symRecipe mes recipes{% endblock %}

{% block body %}
<div class="container mt-4">
{% if not recipes.items is same as ([]) %}
<h1>Recettes de la communuate</h1>

<div class="d-flex justify-content-center flex-wrap">

{% for recipe in recipes %}
  <div class="card border-primary mb-3" style="max-width: 20rem;">
  <div class="card-header">Recette nemero{{recipe.id}}</div>
  <div class="card-body">
    <h4 class="card-title">{{recipe.name}}</h4>
    <p class="card-text">{{recipe.discription|slice(0, 100)}}</p>
  </div>
</div>
{% endfor %}

</div>
  {% else %}
  <h4>Il n'y a pas de rcettes</h4>
{% endif %}


</div>

{% endblock %}